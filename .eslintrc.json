{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "pathGroups": [
          {
            "pattern": "^react",
            "group": "builtin",
            "position": "before"
          }
        ],
        "groups": [
          "builtin",
          "external",
          "internal",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "newlines-between": "always-and-inside-groups",
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
